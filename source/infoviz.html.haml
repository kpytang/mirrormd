-# moods graph
%section.dashboard.pure-g-r.clearfix
	.pure-u-1.graph#moods
		%a{:href => "#moods"}
		%p Mood

-# medications graph
%section.pure-g-r.clearfix
	.pure-u-1#medications-chart
		%a{:href => "#medications"}
		#calcontainer
			#calheader
				%h2 Self-Reported Medicine Intake
			#daysmonth
				.week
					.day
						.daybar
							%p Su
						.dots
							%ul
								%li.yellow
								%li.orange
					.day
						.daybar
							%p M
						.dots
							%ul
								%li.yellow
								%li.orange
					.day
						.daybar
							%p Tu
						.dots
							%ul
								%li.yellow
								%li.orange
					.day
						.daybar
							%p W
						.dots
							%ul
								%li.yellow
								%li.orange
					.day
						.daybar
							%p Th
						.dots
							%ul
								%li.yellow
					.day
						.daybar
							%p F
						.dots
							%ul
								%li.orange
					.day.brn
						.daybar
							%p Sa
						.dots
							%ul
								%li.yellow
								%li.orange
		#calcat
			.label	
				.caldot.yellow
				Wellbutrin
			.label
				.caldot.orange
				Fluoxetine
	
